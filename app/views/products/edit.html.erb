<% provide(:title, "Edit product") %>

<div class="container">
<div class="row">
	<div class="col-md-4 col-md-offset-4">
		<h1 class="title">Edit Product</h1>
		<%= form_for(@product, html:{multipart: true}) do |f| %>

		<% flash.each do |name, msg| %>
  			<%= content_tag(:div, msg, class: "flash_#{name} text-center") %>
		<% end %>

		<div class="field">
			<%= f.label :title %>
			<%= f.text_field :title, autofocus: true, class: 'form-control' %>
		</div>

		<div class="field">
			<%= f.label :description %>
			<%= f.text_area :description, autofocus: true, class: 'form-control', style: 'resize: none' %>
		</div>

		<div class="row">
			<div class="col-md-4">
				<% if @product.image.url.present? %>
					<%= image_tag(@product.image.url, class: 'img-responsive') %>
				<% else %>
					<%= image_tag('default-product.png', class: 'img-responsive') %>
				<% end %>
			</div>

			<div class="col-md-8">
				<%= f.file_field :image %>
		    </div>
		</div>

		<div class="actions">
		<%= f.submit "Update", class: 'btn btn-success btn-block' %>
		</div>

		<% end %>
	</div>
</div>
</div>