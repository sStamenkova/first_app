<li>
<%= link_to product.user.username, product.user %>
<div class="row">
	<div class="col-md-2">
		
	</div>

	<div class="col-md-10">
		<p class="product-title"><%= product.title %></p>
		<p><strong>Description: </strong><%= product.description %></p>
		<div class="row">
		<div class="col-md-8">
		<span class="timestamp">Posted <%= time_ago_in_words(product.created_at) %> ago.</span>
		</div>
		<div class="col-md-4">
		<% if current_user == product.user %>
		<%= link_to 'delete', product, method: :delete, data: { confirm: "Are you sure you want to remove this product?" } %>
		<% end %>
		</div>

		</div>
	</div>
</div>


</li>