<li>

<div class="row">
<div class="col-xs-6">
<% if user.avatar.url.present? %>
<%= image_tag(user.avatar.url, class: 'img-responsive') %>
<% else %>
<%= image_tag('default-avatar.png', class: 'img-responsive') %>
<% end %>
</div>
<div class="col-xs-6">
<h3><%= link_to user.username, user %></h3>

<% if user != current_user %>
<%= link_to 'delete', user, method: :delete, data: {confirm: "Are you sure you want to delete this user?"} %>
<% end %>
</div>
</div>



</li>